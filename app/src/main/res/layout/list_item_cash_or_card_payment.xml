<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="5dp"
    android:background="@drawable/border_blue"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/cashOrCardPayment_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="201302411"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/cashOrCardPayment_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="65,100"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/cashOrCardPayment_productList"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:text="감자2 양파3 식용유3 생수2 냄비2 물티슈1 감자2 양파3 식용유3 생수2 냄비2 물티슈1"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/cashOrCardPayment_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:text="2017.03.21"
        android:textSize="15dp" />
</LinearLayout>
