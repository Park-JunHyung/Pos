<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e7e6e6"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#ffffff"
        android:paddingBottom="5dp">

        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@android:drawable/ic_menu_revert" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:gravity="center"
            android:padding="10dp"
            android:text="회계관리" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:layout_weight="6"
            android:background="@drawable/border"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="기간 설정" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/setTransactionStartDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:text="0000년 00월 00일" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="~"
                    android:textAlignment="center" />

                <Button
                    android:id="@+id/setTransactionEndDate"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="5"
                    android:background="#ffffff"
                    android:text="0000년 00월 00일" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/searchAllTransactionBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:text="조회" />

        <Button
            android:id="@+id/goToCashTransactionBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:text="현금\n입출금\n조회" />

        <Button
            android:id="@+id/goToCardTransactionBtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/border_btn"
            android:text="카드\n입출금\n조회" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/border"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="결제번호"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="결제금액"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="3"
            android:gravity="center"
            android:text="물품목록"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="결제수단"
            android:textSize="15dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center"
            android:text="결제일"
            android:textSize="15dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/productSearchList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12">

    </ListView>
</LinearLayout>
