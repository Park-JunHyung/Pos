<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="team15.pos.ProductAddActivity">
    <TextView
        android:text="물품추가"
        android:layout_width="wrap_content"
        android:textSize="15dp"
        android:textStyle="bold"
        android:layout_weight="2"
        android:layout_height="0dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="150dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="19"
        android:orientation="vertical"
        android:layout_height="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="이름"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductName"
                android:textSize="15dp"
                android:hint="이름"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="수량"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductAmount"
                android:layout_width="0dp"
                android:hint="수량"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="가격"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductPrice"
                android:layout_width="0dp"
                android:hint="가격"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="유통업체"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductCompany"
                android:layout_width="0dp"
                android:hint="유통업체"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="유통기한"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductExpireDate"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="유통기한"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="물품위치"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductPosition"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="물품위치"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="카테고리"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductCategory"
                android:layout_width="0dp"
                android:hint="카테고리"
                android:layout_weight="4"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:text="바코드"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
            <EditText
                android:id="@+id/addProductBarcode"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:hint="바코드"
                android:gravity="center"
                android:background="@drawable/border"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>
    <Button
        android:text="등록"
        android:textSize="13dp"
        android:id="@+id/addProductBtn"
        android:layout_width="wrap_content"
        android:layout_weight="3"
        android:layout_height="0dp"/>
</LinearLayout>
